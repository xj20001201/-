#include <stdio.h>
void main()
{
	float a,b;
	printf("请输入利润(单位:万元)");

	scanf_s("%f",&a );
	

	if (a < 10 )
		b = a * 0.1; 
	
	else if (a <= 20)
		b = (a - 10)*0.075 + 10 * 0.1;

	else if (a <= 40)
	b = (a - 20)*0.05 + 10 * 0.1 + 10 * 0.075;

	else if (a <= 60)
	b = (a - 40)*0.03 + 10 * 0.1 + 10 * 0.075 + 20 * 0.05;

	else if (a <= 100)
	b = (a - 60)*0.015 + 10 * 0.1 + 10 * 0.075 + 20 * 0.05 + 20 * 0.03;

	else
	b = (a - 100)*0.010 + 10 * 0.1 + 10 * 0.075 + 20 * 0.05 + 20 * 0.03 + 40 * 0.015;
	
   printf("你的红利为：%.2f", b);



}


