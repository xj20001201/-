#include<stdio.h>

//输入某年某月某日，判断这一天是这一年的第几天？

void main()
{
	int year,month,day;
	printf("请输入年月日（例：1999.9.12）");
	scanf("%d.%d.%d",&year,&month,&day);
	if(year%4==0)
	{	switch(month)

	{
		case 1:printf("这一天是%d年的第%d天！",year,day);break;
        case 2:printf("这一天是%d年的第%d天！",year,day+31);break;
		case 3:printf("这一天是%d年的第%d天！",year,day+31+29);break;
		case 4:printf("这一天是%d年的第%d天！",year,day+31+29+31);break;
		case 5:printf("这一天是%d年的第%d天！",year,day+31+29+31+30);break;
		case 6:printf("这一天是%d年的第%d天！",year,day+31+29+31+30+31);break;
		case 7:printf("这一天是%d年的第%d天！",year,day+31+29+31+30+31+30);break;
		case 8:printf("这一天是%d年的第%d天！",year,day+31+29+31+30+31+30+31);break;
		case 9:printf("这一天是%d年的第%d天！",year,day+31+29+31+30+31+30+31+31);break;
		case 10:printf("这一天是%d年的第%d天！",year,day+31+29+31+30+31+30+31+31+30);break;
		case 11:printf("这一天是%d年的第%d天！",year,day+31+29+31+30+31+30+31+31+30+31);break;
		case 12:printf("这一天是%d年的第%d天！",year,day+31+29+31+30+31+30+31+31+30+31+30);break;
	}

	}
	if(year%4!=0)
	{	switch(month)
	{
		case 1:printf("这一天是%d年的第%d天！",year,day);break;
        case 2:printf("这一天是%d年的第%d天！",year,day+31);break;
		case 3:printf("这一天是%d年的第%d天！",year,day+31+28);break;
		case 4:printf("这一天是%d年的第%d天！",year,day+31+28+31);break;
		case 5:printf("这一天是%d年的第%d天！",year,day+31+28+31+30);break;
		case 6:printf("这一天是%d年的第%d天！",year,day+31+28+31+30+31);break;
		case 7:printf("这一天是%d年的第%d天！",year,day+31+28+31+30+31+30);break;
		case 8:printf("这一天是%d年的第%d天！",year,day+31+28+31+30+31+30+31);break;
		case 9:printf("这一天是%d年的第%d天！",year,day+31+28+31+30+31+30+31+31);break;
		case 10:printf("这一天是%d年的第%d天！",year,day+31+28+31+30+31+30+31+31+30);break;
		case 11:printf("这一天是%d年的第%d天！",year,day+31+28+31+30+31+30+31+31+30+31);break;
		case 12:printf("这一天是%d年的第%d天！",year,day+31+28+31+30+31+30+31+31+30+31+30);break;
	}
	}

}
